<openerp>
  <data>

 <record model="ir.ui.view" id="cine.movie_form_view">
            <field name="name">movie.form</field>
            <field name="model">cine.movie</field>
            <field name="arch" type="xml">
              <form string="Cine Form">
                <sheet>
                  <notebook>
                    <page string="Data">
                      <group string="Main Data">
                        <field name="poster" widget="image" class="oe_avatar" />
                        <field name="name"/>
                        <field name="director"/>
                        <field name="duration"/>
                        <field name="premiere"/>
                      </group>
                    </page>
                    <page string="Sessions">
                      <group string="Projections">
                        <field name="price"/>
                        <field name="sessions" context="{'default_movie':active_id}"/>
                        <field name="enbillb"/>
                        <field name="enbillb2" invisible="True"/>
                      </group>
                      </page>
                    </notebook>
                  </sheet>
                </form>
              </field>
            </record>
 <record model="ir.ui.view" id="cine.movie_tree_view">
            <field name="name">movie.tree</field>
            <field name="model">cine.movie</field>
            <field name="arch" type="xml">
              <tree>
                        <field name="name"/>
                        <field name="director"/>
                        <field name="premiere"/>
                        <field name="duration"/>
                        <field name="price"/>
                        <field name="sessions"/>
                        <field name="enbillb"/>
                        <field name="enbillb2" invisible="True"/>
                </tree>
              </field>
            </record>
 <record model="ir.ui.view" id="cine.movie_kanban_view">
            <field name="name">movie.kanban</field>
            <field name="model">cine.movie</field>
            <field name="arch" type="xml">
              <kanban>
 		<templates>
                  <t t-name="kanban-box">
                    <div  t-attf-class="">
                                <a type="open">
                                    <img class="oe_kanban_image" t-att-src="kanban_image('cine.movie', 'poster', record.id.value)" style="width:200px;"/>
                                </a>
                                <div t-attf-class="oe_kanban_content">
                                    <h4>
                                        <a type="edit">
                                            <field name="name"></field>
                        <field name="enbillb"/>
                                        </a>
                                    </h4>
                                    <ul>
 
                                       
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
              </kanban>
              </field>
            </record>
 <record model="ir.ui.view" id="cine.movie_search_view">
            <field name="name">movie.search</field>
            <field name="model">cine.movie</field>
            <field name="arch" type="xml">
              <search>
                        <field name="name"/>
                        <field name="director"/>
                        <field name="premiere"/>
                        <field name="price"/>
                        <filter name="cartell" string="In billboard" domain="[('enbillb','=',True)]"/>
                </search>
              </field>
            </record>
  </data>
</openerp>
